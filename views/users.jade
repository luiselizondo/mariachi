extends layout

block content
	script(type="text/template", class="addUser")
		div.row
			div(class="col-lg-6")
				h3 Add user
				form(role="form").well
					div.form-group
						label Name
						input(type="text", name="name", class="form-control", id="name")
						span.help-block Name of the user
					div.form-group
						label Email
						input(type="text", name="email", class="form-control", id="email")
						span.help-block Email
					div.form-group
						label Password
						input(type="password", name="password", class="form-control", id="password")
						span.help-block Password
					button(type="submit", class="btn btn-primary", id="submit") Save
	script(type="text/template", class="editUser")
		div.row
			div(class="col-lg-6")
				h3 Add server
				form(role="form").well
					div.form-group
						label Name
						<input type="text" name="name" class="form-control" id="name" value="<%= name %>" />
						span.help-block Name
					div.form-group
						label Email
						<input type="text" name="email" class="form-control" id="email" value="<%= email %>" />
						span.help-block Email
					div.form-group
						label Password
						<input type="password" name="password" class="form-control" id="password />
						span.help-block Password
					button(type="submit", class="btn btn-primary", id="submit") Update
	script(type="text/template", class="viewUser")
		div.row
			div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12")
				h3 <%= name %>
				div.well
					div.form-group
						label Name:
						p <%= name %>
					div.form-group
						label Email:  
						p <%= email %>
					div.form-group
						label Created:  
						p <%= created %>
	script(type="text/template", class="deleteUser")
		div 
			p 
				strong Are you sure you want to delete the user <%= name %>?
		button(type="submit", id="submit").btn.btn-danger Confirm delete
		a(href="/users").btn.btn-primary Cancel
	script(type="text/template", class="listUsers")
		div.well.well-sm 
			span Control your users here
		table.table.table-hover.table-striped
			thead
				th Name
				th Email
				th Created
				th 
			tbody
				<% _.each(items, function(item) { %>
				tr.item
					td <%= item.name %>
					td <%= item.email %>
					td <%= item.created %>
					td 
						<a href="#users/<%= item.id %>" class="btn btn-primary">View</a>
						<a href="#users/edit/<%= item.id %>" class="btn btn-warning">Edit</a>
						<a href="#users/delete/<%= item.id %>" class="btn btn-danger">Delete</a>
				<% }) %>
	div#page
		div.container
			div.row
				div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12")
					h1= title
						div.pull-right
							a(href="#users/add").btn.btn-primary Add user
					hr
					div#messages
					div#content
block scripts
	script(type="text/javascript", src="javascripts/app/models/Models.js");
	script(type="text/javascript", src="javascripts/app/collections/Collections.js");
	script(type="text/javascript", src="javascripts/app/views/UsersView.js");
	script(type="text/javascript", src="javascripts/app/routers/UsersRouter.js")
	script(type="text/javascript")
		function main() {
			new Mariachi.Routers.UsersRouter();
			Backbone.history.start();	
		}

		// Initialize main
		$(function(){
			main();
		});