script(type="text/template", class="viewProject")
	div.row
		div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12")
			h3 <%= name %>
				div.btn-group.pull-right
					a(href="#", class="btn btn-success dropdown-toggle", data-toggle="dropdown") Actions
						span.caret
					ul(role="menu").dropdown-menu
						li
							<a href="#projects/deploy/<%= id %>">Deploy</a>
						li
							<a href="#projects/history/<%= id %>">Deploy history</a>
						li
							<a href="#projects/edit/<%= id %>">Edit</a>
						li
							<a href="#projects/delete/<%= id %>">Delete</a>
			hr
			div(class="col-lg-9 col-md-9 col-sm-9 col-xs-12")
				div.row
					h4 Application details
					hr
					table.table.table-bordered.table-striped.table-hover
						tr
							td Status:
							td <%= status %>
						tr
							td Type: 
							td <%= type %>
						tr
							td Description:
							td <%= description %>
						tr
							td Webserver:
							td <%= webserver.name %> (<%= webserver.address %>)
						tr
							td Code archive:
							td <%= data.codeArchive %>
						tr
							td Code branch:
							td <%= data.codeBranch %>
						tr
							td Destination:
							td <%= data.destinationDirectory %>
						tr
							td Logs directory:
							td <%= data.logsDirectory %>
						tr
							td Database server:
							td <%= databaseServer.name %> (<%= databaseServer.address %>)
						tr
							td Database archive:
							td <%= data.databaseArchive %>
						tr
							td Database filename:
							td <%= data.databaseFilename %>
						tr
							td Database type:
							td <%= data.databaseType %>
						tr
							td Database Name:
							td <%= data.databaseName %>
						tr
							td Database user:
							td <%= data.databaseUser %>
						tr
							td Database port:
							td <%= data.databasePort %>
